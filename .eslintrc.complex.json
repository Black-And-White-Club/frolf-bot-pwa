{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.json", "tsconfigRootDir": "." },
  "plugins": ["@typescript-eslint","sonarjs"],
  "rules": {
    "complexity": ["warn", 10],
    "max-depth": ["warn", 4],
    "max-statements": ["warn", 40],
    "sonarjs/cognitive-complexity": ["warn", 15]
  }
}
