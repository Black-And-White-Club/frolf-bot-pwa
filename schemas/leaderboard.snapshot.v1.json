{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "leaderboard.snapshot.v1",
	"type": "object",
	"required": ["id", "version", "lastUpdated", "topTags", "topPlayers"],
	"properties": {
		"id": { "type": "string" },
		"version": { "type": "integer", "minimum": 0 },
		"lastUpdated": { "type": "string", "format": "date-time" },
		"topTags": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["tag", "count"],
				"properties": { "tag": { "type": "string" }, "count": { "type": "integer" } }
			}
		},
		"topPlayers": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["userId", "name", "score"],
				"properties": {
					"userId": { "type": "string" },
					"name": { "type": "string" },
					"score": { "type": "number" }
				}
			}
		},
		"metadata": { "type": ["object", "null"] }
	},
	"additionalProperties": false
}
