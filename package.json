{
	"name": "frolf-bot-pwa",
	"version": "0.0.1",
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^1.4.0",
		"@inlang/paraglide-js": "^2.4.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@storybook/addon-a11y": "^9.1.10",
		"@storybook/addon-docs": "^9.1.10",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"@storybook/addon-vitest": "^9.1.10",
		"@storybook/sveltekit": "^9.1.10",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@tsconfig/svelte": "^5.0.5",
		"@types/node": "^24.6.1",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"axe-core": "^4.8.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^9.1.10",
		"globals": "^16.4.0",
		"jsdom": "^21.1.0",
		"lighthouse": "^12.8.2",
		"mdsvex": "^0.12.6",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"rollup-plugin-visualizer": "^5.10.0",
		"storybook": "^9.1.10",
		"svelte": "^5.39.8",
		"svelte-check": "^4.3.2",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.45.0",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-plugin-pwa": "^1.0.3",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:analyze": "ANALYZE=1 vite build --mode production && echo \"Visualizer generated at dist/stats.html\"",
		"analyze:parse": "bun run node ./scripts/parse-stats.js || node ./scripts/parse-stats.js",
		"analyze:lighthouse": "bun run ./scripts/run-lighthouse.bun.js",
		"analyze:report": "bun run ./scripts/analyze-lighthouse.bun.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest --project server",
		"test:unit:node": "vitest --project server --run",
		"test:client": "vitest --project client",
		"test:client:run": "vitest --project client --run",
		"test:single-node": "vitest run src/lib/stores/__tests__/leaderboardPreviewStore.test.ts --environment node",
		"codegen:leaderboard": "npx quicktype -s schema -l ts -o src/lib/types/generated/leaderboard.ts schemas/leaderboard.snapshot.v1.json schemas/leaderboard.patch.v1.json",
		"test:ui": "vitest --project server --environment jsdom",
		"test:a11y": "vitest --run --environment jsdom src/lib/a11y/**/*.test.{js,ts}",
		"test:all": "npm run test:unit:node && npm run test:a11y",
		"coverage": "vitest --run --coverage",
		"coverage:client": "vitest --project client --run --coverage",
		"coverage:server": "vitest --project server --run --coverage",
		"test:browser": "vitest \"src/routes/**/*.spec.{ts,js}\"",
		"test": "npm run test:unit -- --run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"type": "module",
	"dependencies": {
		"@auth/sveltekit": "^1.10.0",
		"add-to-calendar-button": "^2.12.4"
	}
}
