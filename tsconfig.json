{
	"extends": "./.svelte-kit/tsconfig.json",
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"tests/**/*.ts",
		"tests/**/*.js",
		"static/metaTheme.ts",
		"static/registerServiceWorker.ts",
		"static/updateSnackbarHelper.ts"
	],
	"exclude": [
		"playwright.config.ts",
		"integration_tests",
		"integration_tests/**",
		"**/*.spec.ts",
		"**/*.e2e.ts",
		"**/playwright.config.*"
	],
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true
	}
}
